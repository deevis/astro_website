---
import Layout from '../../layouts/Layout.astro';

// We'll fetch the news data in the client since it changes frequently
const pageTitle = "Latest News | Tech & Crypto Updates";
const pageDescription = "Stay updated with the latest news in Bitcoin, Software Development, and AI Progress. Curated tech news from trusted sources.";
---

<Layout title={pageTitle} description={pageDescription}>
  <main class="pt-32 pb-16">
    <div class="container mx-auto px-4">
      <!-- Header -->
      <div class="mb-8">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">Latest News</h1>
        <p class="text-lg text-gray-600 dark:text-gray-400">Stay updated with the latest developments in software development, AI, and Bitcoin.</p>
      </div>

      <!-- Loading state -->
      <div id="loading-state" class="flex items-center justify-center py-12">
        <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600"></div>
        <span class="ml-3 text-gray-600 dark:text-gray-400">Loading latest news...</span>
      </div>

      <!-- Error state -->
      <div id="error-state" class="hidden bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-6 text-center">
        <div class="text-red-600 dark:text-red-400 mb-2">
          <svg class="w-12 h-12 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <h3 class="text-lg font-semibold">Unable to Load News</h3>
          <p class="text-sm mt-2">There was an error loading the news feed. Please try again later.</p>
        </div>
      </div>

      <!-- Filters and Search -->
      <div id="news-controls" class="hidden mb-8 bg-gray-50 dark:bg-gray-900 rounded-lg p-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <!-- Search -->
          <div>
            <label for="news-search" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Search News</label>
            <input 
              type="text" 
              id="news-search" 
              placeholder="Search articles... (Press Enter to search)" 
              class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            />
          </div>

          <!-- Category Filter -->
          <div>
            <label for="category-filter" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Category</label>
            <select 
              id="category-filter" 
              class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            >
              <option value="all">All Categories</option>
              <option value="bitcoin">‚Çø Bitcoin</option>
              <option value="software_dev">üíª Software Development</option>
              <option value="ai_progress">ü§ñ AI Progress</option>
              <option value="tech_news">üì° Tech News</option>
            </select>
          </div>

          <!-- Sort By -->
          <div>
            <label for="sort-filter" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Sort By</label>
            <select 
              id="sort-filter" 
              class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            >
              <option value="date">Latest First</option>
              <option value="importance">Importance</option>
              <option value="source">Source</option>
            </select>
          </div>
        </div>

        <!-- Results summary -->
        <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700">
          <div class="flex justify-between items-center text-sm text-gray-600 dark:text-gray-400">
            <span id="results-count">Showing 0 articles</span>
            <span id="last-updated">Last updated: Never</span>
          </div>
        </div>
      </div>

      <!-- News Grid -->
      <div id="news-grid" class="hidden grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- News cards will be populated here -->
      </div>

      <!-- Empty state -->
      <div id="empty-state" class="hidden text-center py-12">
        <div class="text-gray-400 dark:text-gray-500">
          <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0112 15c-2.034 0-3.9.785-5.291 2.291M6.414 15.414A2 2 0 019.172 13h5.656a2 2 0 012.758 2.414"></path>
          </svg>
          <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">No articles found</h3>
          <p class="text-gray-600 dark:text-gray-400">Try adjusting your search or filter criteria.</p>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .news-card {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  
  .news-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }
  
  .dark .news-card:hover {
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.3), 0 4px 6px -2px rgba(0, 0, 0, 0.2);
  }
</style>

<script is:inline>
  // @ts-nocheck
  (function() {
    class NewsPage {
      constructor() {
        this.articles = [];
        this.filteredArticles = [];
        this.allArticles = []; // Full dataset including historical months
        this.historicalDataLoaded = false;
        this.historicalDataLoading = false;
        this.init();
      }

      async init() {
        try {
          // Load current month quickly for initial display
          await this.loadCurrentMonthNews();
          this.setupEventListeners();
          this.showContent();
          this.filterAndRender();
          
          // Start loading historical data in the background
          this.loadHistoricalDataInBackground();
        } catch (error) {
          console.error('Error initializing news page:', error);
          this.showError();
        }
      }

      async findMostRecentFeed() {
        try {
          // Try the latest endpoint first (most efficient)
          try {
            const latestResponse = await fetch('/news_feeds/latest.json', { 
              method: 'HEAD',
              headers: {
                'Cache-Control': 'no-cache',
                'Pragma': 'no-cache'
              }
            });
            if (latestResponse.ok) {
              return '/news_feeds/latest.json';
            }
          } catch (e) {
            console.log('Latest endpoint not available, trying fallback');
          }
          
          // Fallback to known file
          const fallbackFile = '/news_feeds/2025/06/news_feed_2025-06-20_04-29-21.json';
          try {
            const testResponse = await fetch(fallbackFile, { 
              method: 'HEAD',
              headers: {
                'Cache-Control': 'no-cache',
                'Pragma': 'no-cache'
              }
            });
            if (testResponse.ok) {
              return fallbackFile;
            }
          } catch (e) {
            console.log('Fallback file not found');
          }
          
          return null;
        } catch (error) {
          console.error('Error finding recent feed:', error);
          return null;
        }
      }

      async findAllAggregateFiles() {
        try {
          // Try to load index.json first to get list of all aggregates
          const cacheBuster = `?t=${Date.now()}`;
          const indexResponse = await fetch('/news_feeds/index.json' + cacheBuster, {
            headers: {
              'Cache-Control': 'no-cache',
              'Pragma': 'no-cache'
            }
          });
          
          if (indexResponse.ok) {
            const indexData = await indexResponse.json();
            if (indexData.aggregates_index && indexData.aggregates_index.aggregates) {
              // Return paths sorted by month (newest first)
              return indexData.aggregates_index.aggregates
                .sort((a, b) => b.month.localeCompare(a.month))
                .map(agg => agg.path);
            }
          }
          
          // Fallback: try to discover aggregates manually
          const months = ['10', '09', '08', '07', '06'];
          const currentYear = new Date().getFullYear();
          const aggregateFiles = [];
          
          for (const month of months) {
            const path = `/news_feeds/${currentYear}/aggregate_${currentYear}_${month}.json`;
            try {
              const testResponse = await fetch(path, { 
                method: 'HEAD',
                headers: {
                  'Cache-Control': 'no-cache',
                  'Pragma': 'no-cache'
                }
              });
              if (testResponse.ok) {
                aggregateFiles.push(path);
              }
            } catch (e) {
              // Skip if file doesn't exist
            }
          }
          
          return aggregateFiles.length > 0 ? aggregateFiles : null;
        } catch (error) {
          console.error('Error finding aggregate files:', error);
          return null;
        }
      }

      async loadCurrentMonthNews() {
        try {
          // Find and fetch the most recent news feed (current month only)
          const mostRecentFile = await this.findMostRecentFeed();
          if (!mostRecentFile) {
            throw new Error('No news feed files found');
          }
          
          // Add timestamp to prevent caching
          const cacheBuster = `?t=${Date.now()}`;
          const response = await fetch(mostRecentFile + cacheBuster, {
            headers: {
              'Cache-Control': 'no-cache',
              'Pragma': 'no-cache'
            }
          });
          if (!response.ok) {
            throw new Error('HTTP error! status: ' + response.status);
          }
          const data = await response.json();
          
          // Use active articles for initial display, but also store all articles from current month
          const currentMonthArticles = data.active_articles || [];
          if (data.monthly_aggregate && data.monthly_aggregate.articles) {
            // Store all articles (active + inactive) from current month for search
            this.allArticles = [...data.monthly_aggregate.articles];
          } else {
            this.allArticles = [...currentMonthArticles];
          }
          
          // For initial display, show active articles
          this.articles = currentMonthArticles;
          
          // Update last updated time
          const lastUpdated = new Date(data.monthly_aggregate?.last_updated || Date.now());
          document.getElementById('last-updated').textContent = 'Last updated: ' + lastUpdated.toLocaleString();
        } catch (error) {
          console.error('Error loading news:', error);
          throw error;
        }
      }

      async loadHistoricalDataInBackground(immediate = false) {
        // Prevent multiple simultaneous loads
        if (this.historicalDataLoading) {
          // If already loading, wait for it to complete
          while (this.historicalDataLoading) {
            await new Promise(resolve => setTimeout(resolve, 100));
          }
          return;
        }
        
        if (this.historicalDataLoaded) {
          return;
        }
        
        this.historicalDataLoading = true;
        
        try {
          const loadHistorical = async () => {
            const aggregateFiles = await this.findAllAggregateFiles();
            if (!aggregateFiles || aggregateFiles.length === 0) {
              console.warn('No aggregate files found for historical data');
              this.historicalDataLoading = false;
              return;
            }
            
            // Skip the first file (current month) as we already have it
            const historicalFiles = aggregateFiles.slice(1);
            
            if (historicalFiles.length === 0) {
              this.historicalDataLoaded = true;
              this.historicalDataLoading = false;
              return;
            }
            
            const cacheBuster = `?t=${Date.now()}`;
            const historicalArticles = [];
            
            // Load historical aggregates
            for (const filePath of historicalFiles) {
              try {
                const response = await fetch(filePath + cacheBuster, {
                  headers: {
                    'Cache-Control': 'no-cache',
                    'Pragma': 'no-cache'
                  }
                });
                
                if (response.ok) {
                  const data = await response.json();
                  if (data.monthly_aggregate && data.monthly_aggregate.articles) {
                    // Include all articles (both active and inactive)
                    historicalArticles.push(...data.monthly_aggregate.articles);
                  }
                }
              } catch (error) {
                console.warn(`Error loading historical aggregate ${filePath}:`, error);
                // Continue loading other aggregates even if one fails
              }
            }
            
            // Merge historical articles with current month articles
            this.allArticles.push(...historicalArticles);
            
            // Sort all articles by first_seen date (newest first)
            this.allArticles.sort((a, b) => {
              const dateA = new Date(a.first_seen).getTime();
              const dateB = new Date(b.first_seen).getTime();
              return dateB - dateA;
            });
            
            this.historicalDataLoaded = true;
            this.historicalDataLoading = false;
            
            // If user is currently searching, re-apply filters with full dataset
            const searchTerm = document.getElementById('news-search').value.toLowerCase().trim();
            if (searchTerm) {
              this.filterAndRender();
            }
          };
          
          // If immediate (user is searching), load right away
          // Otherwise use requestIdleCallback for better performance
          if (immediate) {
            await loadHistorical();
          } else {
            // Use requestIdleCallback for better performance, fallback to setTimeout
            if (window.requestIdleCallback) {
              requestIdleCallback(() => {
                loadHistorical().catch(error => {
                  console.error('Error in background load:', error);
                  this.historicalDataLoading = false;
                });
              }, { timeout: 2000 });
            } else {
              setTimeout(() => {
                loadHistorical().catch(error => {
                  console.error('Error in background load:', error);
                  this.historicalDataLoading = false;
                });
              }, 100);
            }
          }
        } catch (error) {
          console.error('Error loading historical data:', error);
          this.historicalDataLoading = false;
        }
      }

      setupEventListeners() {
        // Search input - only search on Enter key press
        const searchInput = document.getElementById('news-search');
        searchInput.addEventListener('keydown', (e) => {
          if (e.key === 'Enter') {
            e.preventDefault();
            this.filterAndRender();
          }
        });

        // Category filter
        document.getElementById('category-filter').addEventListener('change', () => {
          this.filterAndRender();
        });

        // Sort filter
        document.getElementById('sort-filter').addEventListener('change', () => {
          this.filterAndRender();
        });
      }

      async filterAndRender() {
        await this.applyFilters();
        this.renderArticles();
        this.updateResultsCount();
      }

      // Helper function to escape special regex characters
      escapeRegex(str) {
        return str.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
      }

      // Helper function to check if search term exists as a whole word
      containsWholeWord(text, searchTerm) {
        if (!text || !searchTerm) return false;
        const escapedTerm = this.escapeRegex(searchTerm);
        const regex = new RegExp(`\\b${escapedTerm}\\b`, 'i');
        return regex.test(text);
      }

      async applyFilters() {
        const searchTerm = document.getElementById('news-search').value.toLowerCase().trim();
        const hasSearchTerm = searchTerm.length > 0;
        
        // If searching and historical data isn't loaded yet, wait for it or trigger load
        if (hasSearchTerm && !this.historicalDataLoaded) {
          await this.loadHistoricalDataInBackground(true); // immediate = true when searching
        }
        
        // Use full dataset when searching, otherwise use current month only
        const sourceArticles = hasSearchTerm ? this.allArticles : this.articles;
        let filtered = [...sourceArticles];

        // Apply search filter with whole word matching
        if (hasSearchTerm) {
          filtered = filtered.filter(article => 
            this.containsWholeWord(article.title, searchTerm) ||
            this.containsWholeWord(article.content_sample, searchTerm) ||
            article.sources.some(s => 
              this.containsWholeWord(s.name, searchTerm) ||
              (s.author && this.containsWholeWord(s.author, searchTerm))
            ) ||
            article.tags.some(tag => this.containsWholeWord(tag, searchTerm))
          );
        }

        // Apply category filter
        const category = document.getElementById('category-filter').value;
        if (category !== 'all') {
          filtered = filtered.filter(article => article.category === category);
        }

        // Apply sorting
        // When searching, always sort by newest first; otherwise respect the sort dropdown
        const sortBy = document.getElementById('sort-filter').value;
        if (hasSearchTerm || sortBy === 'date') {
          // Sort by newest first (by first_seen date)
          filtered.sort((a, b) => new Date(b.first_seen).getTime() - new Date(a.first_seen).getTime());
        } else if (sortBy === 'importance') {
          const importanceOrder = { 'high': 3, 'medium': 2, 'low': 1 };
          filtered.sort((a, b) => {
            const importanceA = importanceOrder[a.importance] || 0;
            const importanceB = importanceOrder[b.importance] || 0;
            return importanceB - importanceA;
          });
        } else if (sortBy === 'source') {
          filtered.sort((a, b) => {
            const sourceA = a.sources && a.sources[0] ? a.sources[0].name : '';
            const sourceB = b.sources && b.sources[0] ? b.sources[0].name : '';
            return sourceA.localeCompare(sourceB);
          });
        }

        this.filteredArticles = filtered;
      }

      renderArticles() {
        const grid = document.getElementById('news-grid');
        const emptyState = document.getElementById('empty-state');

        if (this.filteredArticles.length === 0) {
          grid.classList.add('hidden');
          emptyState.classList.remove('hidden');
          return;
        }

        emptyState.classList.add('hidden');
        grid.classList.remove('hidden');

        grid.innerHTML = this.filteredArticles.map(article => this.createArticleCard(article)).join('');

        // Add click handlers to cards
        grid.querySelectorAll('.news-card').forEach(card => {
          card.addEventListener('click', () => {
            const articleId = card.dataset.articleId;
            // Find article from filtered articles (what's currently displayed)
            const article = this.filteredArticles.find(a => a.story_id === articleId);
            if (article) {
              this.openModal(article);
            }
          });
        });
      }

      createArticleCard(article) {
        const categoryInfo = this.getCategoryInfo(article.category);
        const importanceInfo = this.getImportanceInfo(article.importance);
        const storyAge = this.formatStoryAge(article);
        const sourceDisplay = this.formatSourceBadge(article.sources);

        return '<div class="news-card bg-white dark:bg-gray-800 rounded-lg shadow-md cursor-pointer overflow-hidden" data-article-id="' + article.story_id + '">' +
          '<div class="p-6">' +
            '<div class="flex items-center justify-between mb-3">' +
              '<span class="px-2 py-1 text-xs font-semibold rounded-full ' + categoryInfo.color + '">' +
                categoryInfo.icon + ' ' + categoryInfo.name +
              '</span>' +
              '<span class="px-2 py-1 text-xs font-medium rounded-full ' + importanceInfo.color + '">' +
                importanceInfo.icon +
              '</span>' +
            '</div>' +
            '<h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2 line-clamp-2">' +
              article.title +
            '</h3>' +
            '<p class="text-gray-600 dark:text-gray-400 text-sm mb-4 line-clamp-3">' +
              article.content_sample +
            '</p>' +
            '<div class="flex items-center justify-between text-xs text-gray-500 dark:text-gray-400">' +
              '<span>' + sourceDisplay + '</span>' +
              '<span>' + storyAge + '</span>' +
            '</div>' +
          '</div>' +
        '</div>';
      }

      updateResultsCount() {
        const count = this.filteredArticles.length;
        const searchTerm = document.getElementById('news-search').value.toLowerCase().trim();
        const hasSearchTerm = searchTerm.length > 0;
        
        // Use appropriate total based on whether searching
        const total = hasSearchTerm ? this.allArticles.length : this.articles.length;
        const countElement = document.getElementById('results-count');
        
        if (hasSearchTerm && !this.historicalDataLoaded) {
          countElement.textContent = 'Loading historical data...';
        } else if (count === total) {
          countElement.textContent = 'Showing all ' + total + ' articles';
        } else {
          countElement.textContent = 'Showing ' + count + ' of ' + total + ' articles';
        }
      }

      openModal(article) {
        // Use allArticles if available (includes historical), otherwise fall back to current month
        const articlesForModal = this.allArticles.length > 0 ? this.allArticles : this.articles;
        const event = new CustomEvent('openNewsModal', {
          detail: { article: article, articles: articlesForModal }
        });
        document.dispatchEvent(event);
      }

      getCategoryInfo(category) {
        const categoryMap = {
          'bitcoin': { 
            name: 'Bitcoin', 
            color: 'bg-orange-500 text-white',
            icon: '‚Çø'
          },
          'software_dev': { 
            name: 'Software Dev', 
            color: 'bg-blue-500 text-white',
            icon: 'üíª'
          },
          'ai_progress': { 
            name: 'AI Progress', 
            color: 'bg-purple-500 text-white',
            icon: 'ü§ñ'
          },
          'tech_news': { 
            name: 'Tech News', 
            color: 'bg-green-500 text-white',
            icon: 'üì°'
          }
        };
        
        return categoryMap[category] || { 
          name: 'News', 
          color: 'bg-gray-500 text-white',
          icon: 'üì∞'
        };
      }

      getImportanceInfo(importance) {
        const importanceMap = {
          'high': { 
            name: 'High', 
            color: 'bg-red-500 text-white',
            icon: 'üî•'
          },
          'medium': { 
            name: 'Medium', 
            color: 'bg-yellow-500 text-white',
            icon: '‚ö°'
          },
          'low': { 
            name: 'Low', 
            color: 'bg-green-500 text-white',
            icon: 'üìù'
          }
        };
        
        return importanceMap[importance] || { 
          name: 'Normal', 
          color: 'bg-gray-500 text-white',
          icon: 'üì∞'
        };
      }

      formatStoryAge(article) {
        try {
          const firstSeen = new Date(article.first_seen);
          const lastSeen = new Date(article.last_seen);
          const now = new Date();
          
          const ageHours = Math.floor((now - firstSeen) / (1000 * 60 * 60));
          const recencyHours = Math.floor((now - lastSeen) / (1000 * 60 * 60));
          
          // Format age
          let ageStr = '';
          if (ageHours < 1) {
            ageStr = 'Just now';
          } else if (ageHours < 24) {
            ageStr = ageHours + 'h ago';
          } else if (ageHours < 48) {
            ageStr = '1d ago';
          } else {
            const days = Math.floor(ageHours / 24);
            ageStr = days + 'd ago';
          }
          
          // Add recency for very recent updates
          if (article.is_active && recencyHours < 2) {
            return ageStr + ' (updated recently)';
          }
          
          return ageStr;
        } catch (error) {
          return 'Unknown';
        }
      }

      formatSourceBadge(sources) {
        if (!sources || sources.length === 0) return 'Unknown';
        if (sources.length === 1) return sources[0].name;
        
        // Show first source + count badge for multiple sources
        return '<span class="inline-flex items-center gap-1">' +
          '<span>' + sources[0].name + '</span>' +
          '<span class="px-1.5 py-0.5 bg-blue-500 text-white rounded-full text-xs font-semibold">' +
          sources.length +
          '</span>' +
          '</span>';
      }

      showContent() {
        document.getElementById('loading-state').classList.add('hidden');
        document.getElementById('news-controls').classList.remove('hidden');
        document.getElementById('news-grid').classList.remove('hidden');
      }

      showError() {
        document.getElementById('loading-state').classList.add('hidden');
        document.getElementById('error-state').classList.remove('hidden');
      }
    }

    // Initialize when DOM is loaded
    document.addEventListener('DOMContentLoaded', function() {
      new NewsPage();
    });
  })();
</script>

<!-- NewsModal will be included via Layout --> 