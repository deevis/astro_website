  <script>
    const ctx = new AudioContext();
    let noiseNode: ScriptProcessorNode | null = null;
    let gainNode: GainNode | null = null;
    let lowFilter: BiquadFilterNode | null = null;
    let highFilter: BiquadFilterNode | null = null;
    let tiltFilter: BiquadFilterNode | null = null;
    let modOsc: OscillatorNode | null = null;
    let modGain: GainNode | null = null;
    let analyser: AnalyserNode | null = null;
    let isPlaying = false;

    function createPinkNoise(ctx: AudioContext): ScriptProcessorNode {
      const bufferSize = 4096;
      const node = ctx.createScriptProcessor(bufferSize, 1, 1);
      let b0=0,b1=0,b2=0,b3=0,b4=0,b5=0,b6=0;
      node.onaudioprocess = e => {
        const output = e.outputBuffer.getChannelData(0);
        for (let i = 0; i < bufferSize; i++) {
          const white = Math.random() * 2 - 1;
          b0 = 0.99886 * b0 + white * 0.0555179;
          b1 = 0.99332 * b1 + white * 0.0750759;
          b2 = 0.96900 * b2 + white * 0.1538520;
          b3 = 0.86650 * b3 + white * 0.3104856;
          b4 = 0.55000 * b4 + white * 0.5329522;
          b5 = -0.7616 * b5 - white * 0.0168980;
          output[i] = b0 + b1 + b2 + b3 + b4 + b5 + b6 + white * 0.5362;
          output[i] *= 0.11;
          b6 = white * 0.115926;
        }
      };
      return node;
    }

    function createModulation() {
      if (modOsc) {
        try { modOsc.stop(); } catch (e) {}
        modOsc.disconnect();
        modGain!.disconnect();
      }
      modOsc = ctx.createOscillator();
      modGain = ctx.createGain();
      modGain.gain.value = parseFloat((document.getElementById('modDepth') as HTMLInputElement).value);
      modOsc.frequency.value = parseFloat((document.getElementById('modSpeed') as HTMLInputElement).value);
      modOsc.connect(modGain).connect(gainNode!.gain);
      modOsc.start();
    }

    function startNoise() {
      noiseNode = createPinkNoise(ctx);
      gainNode = ctx.createGain();
      lowFilter = ctx.createBiquadFilter();
      lowFilter.type = 'highpass';
      lowFilter.frequency.value = parseFloat((document.getElementById('lowcut') as HTMLInputElement).value);
      highFilter = ctx.createBiquadFilter();
      highFilter.type = 'lowpass';
      highFilter.frequency.value = parseFloat((document.getElementById('highcut') as HTMLInputElement).value);

      tiltFilter = ctx.createBiquadFilter();
      tiltFilter.type = 'lowshelf';
      tiltFilter.frequency.value = 500;
      tiltFilter.gain.value = (parseFloat((document.getElementById('tilt') as HTMLInputElement).value) - 0.5) * 12;

      analyser = ctx.createAnalyser();
      analyser.fftSize = 1024;

      noiseNode.connect(tiltFilter).connect(lowFilter).connect(highFilter).connect(gainNode).connect(analyser).connect(ctx.destination);
      createModulation();
      isPlaying = true;
      animateSpectrum();
    }

    function stopNoise() {
      if (modOsc) { try { modOsc.stop(); } catch (e) {} }
      noiseNode!.disconnect();
      gainNode!.disconnect();
      isPlaying = false;
    }

    document.getElementById('toggle')!.addEventListener('click', () => {
      if (!isPlaying) {
        ctx.resume().then(() => {
          startNoise();
          document.getElementById('toggle')!.textContent = 'â¸ Stop';
        });
      } else {
        stopNoise();
        document.getElementById('toggle')!.textContent = 'â–¶ Start';
      }
    });

    // Drawer logic
    const drawer = document.getElementById('drawer')!;
    document.getElementById('toggleDrawer')!.addEventListener('click', () => {
      drawer.classList.toggle('open');
      loadPresets();
    });

    // Save & load presets
    function getSettings() {
      return {
        volume: (document.getElementById('volume') as HTMLInputElement).value,
        tilt: (document.getElementById('tilt') as HTMLInputElement).value,
        lowcut: (document.getElementById('lowcut') as HTMLInputElement).value,
        highcut: (document.getElementById('highcut') as HTMLInputElement).value,
        modDepth: (document.getElementById('modDepth') as HTMLInputElement).value,
        modSpeed: (document.getElementById('modSpeed') as HTMLInputElement).value
      };
    }

    function setSettings(settings: Record<string, string>) {
      for (const key in settings) {
        const el = document.getElementById(key) as HTMLInputElement | null;
        if (el) {
          el.value = settings[key];
          el.dispatchEvent(new Event('input'));
        }
      }
    }

    document.getElementById('savePreset')!.addEventListener('click', () => {
      const name = prompt('Enter a name for this preset:');
      if (!name) return;
      try {
        const settings = getSettings();
        const presets = JSON.parse(localStorage.getItem('pinkNoisePresets') || '{}');
        presets[name] = settings;
        localStorage.setItem('pinkNoisePresets', JSON.stringify(presets));
        loadPresets();
        alert(`Preset "${name}" saved!`);
      } catch (err) {
        console.error('Error saving preset:', err);
        alert('Failed to save preset.');
      }
    });

    function loadPresets() {
      const list = document.getElementById('presetList')!;
      list.innerHTML = '';
      const presets = JSON.parse(localStorage.getItem('pinkNoisePresets') || '{}');
      for (const name in presets) {
        const div = document.createElement('div');
        div.className = 'preset-item';
        div.textContent = name;
        div.onclick = () => setSettings(presets[name]);
        list.appendChild(div);
      }
    }

    // Update filters and modulation in real time
    ['volume','tilt','lowcut','highcut','modDepth','modSpeed'].forEach(id => {
      document.getElementById(id)!.addEventListener('input', e => {
        if (!gainNode) return;
        const target = e.target as HTMLInputElement;
        switch (id) {
          case 'volume': gainNode.gain.value = parseFloat(target.value); break;
          case 'tilt': tiltFilter!.gain.value = (parseFloat(target.value) - 0.5) * 12; break;
          case 'lowcut': lowFilter!.frequency.value = parseFloat(target.value); break;
          case 'highcut': highFilter!.frequency.value = parseFloat(target.value); break;
          case 'modDepth':
          case 'modSpeed':
            createModulation();
            break;
        }
      });
    });

    // Visualization
    const canvas = document.getElementById('spectrum') as HTMLCanvasElement;
    const ctx2d = canvas.getContext('2d')!;
    function animateSpectrum() {
      if (!isPlaying) return;
      requestAnimationFrame(animateSpectrum);
      const bufferLength = analyser!.frequencyBinCount;
      const dataArray = new Uint8Array(bufferLength);
      analyser!.getByteFrequencyData(dataArray);
      ctx2d.fillStyle = '#111';
      ctx2d.fillRect(0,0,canvas.width,canvas.height);
      const barWidth = (canvas.width / bufferLength) * 2.5;
      let x = 0;
      for (let i = 0; i < bufferLength; i++) {
        const barHeight = dataArray[i] / 2;
        ctx2d.fillStyle = `hsl(${120 - barHeight/2}, 100%, 60%)`;
        ctx2d.fillRect(x, canvas.height - barHeight, barWidth, barHeight);
        x += barWidth + 1;
      }
    }
  </script>

