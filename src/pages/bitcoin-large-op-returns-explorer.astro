                        `;
                    });
            } else if (item.hasFile && ['jpg', 'jpeg', 'png', 'gif', 'webp', 'bmp', 'svg'].includes(item.type)) {
                const imgPath = `/html_showcase/bitcoin_large_op_return_explorer/bitcoin_large_op_returns/op_return_data/${item.blockDir}/tx_${item.txid}_${item.vout}.${item.type}`;
                preview.innerHTML = `
                    <h3 style="margin-bottom: 15px; color: #ff00ff;">Image Preview:</h3>
