---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';

const skills = {
  languages: [
    { name: 'Ruby', level: 95 },
    { name: 'Python', level: 90 },
    { name: 'SQL', level: 85 },
    { name: 'Javascript', level: 85 },
    { name: 'Java', level: 80 },
    { name: 'HTML', level: 75 }
  ],
  frameworks: [
    { name: 'Rails', level: 95 },
    { name: 'Pandas/Sklearn', level: 85 },
    { name: 'Neo4J', level: 85 },
    { name: 'Node/Angular', level: 80 },
    { name: 'Spring', level: 75 },
    { name: 'Django', level: 70 },
  ]
};

const experience = [
  {
    year: '8/2022 - current',
    company: 'Kipu Health',
    role: 'Senior Software Architect',
    achievements: [
      'Lead the Platform team, focusing on software platform integrity, security, tech debt elimination, and performance optimization',
      'Developed internal BI tools to bridge gaps between DevOps, Development, and Client Relations, resulting in improved cross-functional collaboration',
      'Serve as Release Manager, overseeing code changes from 6 teams delivered to 1500+ clients on a 3-week cadence, ensuring smooth and timely releases',
      'Implemented data collection and analysis tools for client deployment statistics and environment monitoring, leading to proactive issue resolution and improved client satisfaction',
      'Spearheaded initiatives to optimize system performance, resulting in numerous improvements of 50% or more.'
    ]
  },
  {
    year: '11/2016 - 4/2022',
    company: 'Verisys',
    role: 'Lead Architect',
    achievements: [
      'Designed and led the development of ATLAS (Acquire/Transform/Load/Archive/Search) data repositories, significantly improving data processing efficiency',
      'Implemented a knowledge graph using Neo4J, joining data across silos and enabling complex data relationships, resulting in more insightful data analysis',
      'Created tools for Exploratory Data Analysis (EDA) and Data Transformation mappings, enhancing data quality and reliability',
      'Utilized Rails engines to streamline the creation of multiple data repositories, reducing development time by 40%',
      'Mentored junior developers, fostering a culture of continuous learning and innovation'
    ]
  },
  {
    year: '2/2016 - 11/2016',
    company: 'DevGarden',
    role: 'Lead Architect',
    achievements: [
      'Architected multiple projects across various technologies including Ruby on Rails, Django, and Node/Angular',
      'Implemented DevOps processes and infrastructure using AWS EC2 for staging, production, and CI/CD',
      'Established a Capistrano-based deployment process for efficient branch reviews and code promotion'
    ]
  },
  {
    year: '3/2007 - 10/2015',
    company: 'iCentris',
    role: 'Senior Software Engineer',
    achievements: [
      'Led a team in rewriting a Java web application to Ruby on Rails',
      'Architected software solutions and implemented technology stack in Amazon EC2',
      'Managed various aspects of software development including feature design, client implementations, and system integrations'
    ]
  }
];
---

<Layout title="About Me | Professional Portfolio">
  <main class="pt-24 pb-16">
    <div class="container mx-auto px-4">
      <h1 class="text-3xl font-bold mb-8">About Me</h1>
      
      <!-- Skills Section -->
      <section class="mb-16">
        <h2 class="text-2xl font-semibold mb-6">Technical Skills</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Programming Languages -->
          <div>
            <h3 class="text-xl font-medium mb-4">Programming Languages</h3>
            <div class="space-y-4">
              {skills.languages.map((skill) => (
                <div>
                  <div class="flex justify-between mb-1">
                    <span>{skill.name}</span>
                    <span>{skill.level}%</span>
                  </div>
                  <div class="w-full bg-gray-200 rounded-full h-2">
                    <div
                      class="bg-primary-600 h-2 rounded-full"
                      style={`width: ${skill.level}%`}
                    />
                  </div>
                </div>
              ))}
            </div>
          </div>
          
          <!-- Frameworks -->
          <div>
            <h3 class="text-xl font-medium mb-4">Frameworks & Technologies</h3>
            <div class="space-y-4">
              {skills.frameworks.map((skill) => (
                <div>
                  <div class="flex justify-between mb-1">
                    <span>{skill.name}</span>
                    <span>{skill.level}%</span>
                  </div>
                  <div class="w-full bg-gray-200 rounded-full h-2">
                    <div
                      class="bg-primary-600 h-2 rounded-full"
                      style={`width: ${skill.level}%`}
                    />
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </section>
      
      <!-- Experience Timeline -->
      <section>
        <h2 class="text-2xl font-semibold mb-6">Professional Experience</h2>
        <div class="space-y-8">
          {experience.map((item, index) => (
            <div class="relative pl-8 border-l-2 border-primary-200">
              <div class="absolute w-4 h-4 bg-primary-600 rounded-full -left-[9px] top-0" />
              <div class="mb-1 text-sm text-primary-600 font-medium">{item.year}</div>
              <h3 class="text-xl font-medium">{item.company}</h3>
              <div class="text-lg text-gray-600 mb-2">{item.role}</div>
              <ul class="list-disc list-inside text-gray-600">
                {item.achievements.map((achievement) => (
                  <li>{achievement}</li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </section>
    </div>
  </main>
</Layout>