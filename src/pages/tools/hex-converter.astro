---
import Layout from '../../layouts/Layout.astro';

const pageTitle = 'Hex Converter - Bitcoin OP_RETURN Decoder';
const pageDescription = 'Convert hexadecimal data to text and vice versa. Decode Bitcoin OP_RETURN messages and blockchain data.';
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="converter-wrapper">
    <div class="container mx-auto px-4">
      <main class="converter-container">
        <h1 class="page-title">Hex Converter</h1>
        <p class="page-subtitle">Decode Bitcoin OP_RETURN data and convert between hex and text</p>
        
        <div class="conversion-area">
          <div class="text-panel">
            <div class="panel-header">
              <label for="text-input" class="panel-label">
                <svg class="label-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
