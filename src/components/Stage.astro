---
interface Props {
  number: number;
  title: string;
  class?: string;
}

const { number, title, class: className = '' } = Astro.props;
---

<div class:list={['stage', className]}>
  <span class="stage-number">{number}</span>
  <h3>{title}</h3>
  <div class="stage-content">
    <slot />
  </div>
</div>

<style>
  .stage {
    margin-bottom: 0.75rem;
    padding: 0.625rem;
    background: white;
    border-radius: 0.375rem;
    box-shadow: 0 1px 4px rgba(0,0,0,0.05);
    border-left: 3px solid #667eea;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .stage:hover {
    transform: translateX(2px);
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
  }
  
  .stage-number {
    display: inline-block;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    width: 1.5rem;
    height: 1.5rem;
    border-radius: 50%;
    text-align: center;
    line-height: 1.5rem;
    font-weight: bold;
    margin-right: 0.5rem;
    font-size: 0.85em;
  }
  
  .stage h3 {
    display: inline-block;
    font-size: 1.3em;
    color: #2c3e50;
    margin-bottom: 0.375rem;
  }
  
  .stage-content {
    margin-top: 0.5rem;
    padding-left: 2rem;
  }
  
  .stage-content p {
    font-size: 0.95em;
    margin-bottom: 0.375rem;
    line-height: 1.5;
  }
  
  :global(.dark) .stage {
    background: #1a1a1a;
    border-left-color: #667eea;
  }
  
  :global(.dark) .stage h3 {
    color: #e0e0e0;
  }
  
  @media (max-width: 768px) {
    .stage-content {
      padding-left: 0;
    }
    
    .stage {
      padding: 0.5rem;
      margin-bottom: 0.625rem;
    }
    
    .stage h3 {
      font-size: 1.15em;
    }
  }
</style>

