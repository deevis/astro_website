---
interface Props {
  title: string;
  description: string;
  href: string;
  image?: string;
}

const { href, title, description, image } = Astro.props;
---

<a href={href} class="group block">
  <div class="overflow-hidden rounded-lg bg-white shadow-md transition-shadow hover:shadow-lg">
    {image && (
      <div class="aspect-video overflow-hidden">
        <img
          src={image}
          alt={title}
          class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
        />
      </div>
    )}
    <div class="p-6">
      <h3 class="text-xl font-semibold text-gray-900 group-hover:text-primary-600">
        {title}
      </h3>
      <p class="mt-2 text-gray-600">
        {description}
      </p>
    </div>
  </div>
</a>