---
interface Props {
  id: string;
  title: string;
}

const { id, title } = Astro.props;
---

<div class="aspect-video rounded-lg overflow-hidden">
  <iframe
    src={`https://www.youtube.com/embed/${id}`}
    title={title}
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
    allowfullscreen
    class="w-full h-full"
  ></iframe>
</div>