// Documentaries component for Bitcoin Resources page
import YouTubeEmbed from '../YouTubeEmbed.astro';

interface Documentary {
  title: string;
  director?: string;
  year: number;
  description?: string;
  synopsis: string;
  duration?: number; // in minutes
  youtubeId?: string;
  trailerYoutubeId?: string;
  keyTakeaways: string[];
  whoShouldWatch: string[];
