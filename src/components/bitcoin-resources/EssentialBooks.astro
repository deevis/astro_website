      button.addEventListener('click', function() {
        const bookIndex = parseInt(this.getAttribute('data-book-index'));
        showBookModal(bookIndex);
      });
    });
    
    // Title clicks
    document.querySelectorAll('h4[data-book-index]').forEach(title => {
      title.addEventListener('click', function() {
        const bookIndex = parseInt(this.getAttribute('data-book-index'));
        showBookModal(bookIndex);
      });
    });
    
    // Close modal
    document.getElementById('close-modal').addEventListener('click', hideBookModal);
    
    // Close on overlay click
    document.getElementById('book-modal-overlay').addEventListener('click', function(e) {
      // Close if clicking outside the modal content
      if (e.target && !document.getElementById('book-modal').contains(e.target as Node)) {
        hideBookModal();
      }
    });
    
    // Close on escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && !document.getElementById('book-modal-overlay').classList.contains('hidden')) {
