---
interface Props {
  title?: string;
  class?: string;
}

const { title = 'The Aftermath', class: className = '' } = Astro.props;
---

<div class:list={['outcome-box', className]}>
  <h4>{title}</h4>
  <slot />
</div>

<style>
  .outcome-box {
    background: linear-gradient(135deg, #667eea20 0%, #764ba220 100%);
    padding: 0.625rem;
    border-radius: 0.375rem;
    margin: 0.5rem 0;
    border-left: 3px solid #667eea;
  }
  
  .outcome-box h4 {
    color: #667eea;
    margin-bottom: 0.375rem;
    font-size: 1.1em;
  }
  
  .outcome-box p {
    margin-bottom: 0.25rem;
    font-size: 0.9em;
  }
  
  :global(.dark) .outcome-box {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.15) 0%, rgba(118, 75, 162, 0.15) 100%);
    border-left-color: #667eea;
  }
  
  :global(.dark) .outcome-box h4 {
    color: #8b9dc3;
  }
</style>

