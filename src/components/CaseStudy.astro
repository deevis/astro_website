---
interface Props {
  id: string;
  active?: boolean;
  class?: string;
}

const { id, active = false, class: className = '' } = Astro.props;
---

<div 
  id={id} 
  class:list={['case-study', { active }, className]}
>
  <slot />
</div>

<style>
  .case-study {
    display: none;
    animation: fadeIn 0.5s ease;
  }
  
  .case-study.active {
    display: block;
  }
  
  @keyframes fadeIn {
    from { 
      opacity: 0; 
      transform: translateY(20px); 
    }
    to { 
      opacity: 1; 
      transform: translateY(0); 
    }
  }
</style>

