---
interface Props {
  title?: string;
  class?: string;
}

const { title = 'The Explosion', class: className = '' } = Astro.props;
---

<div class:list={['crisis-box', className]}>
  <h4>{title}</h4>
  <slot />
</div>

<style>
  .crisis-box {
    background: linear-gradient(135deg, #ff6b6b20 0%, #ff000020 100%);
    padding: 0.625rem;
    border-radius: 0.375rem;
    margin: 0.5rem 0;
    border-left: 3px solid #ff6b6b;
  }
  
  .crisis-box h4 {
    color: #ff0000;
    margin-bottom: 0.375rem;
    font-size: 1.1em;
  }
  
  .crisis-box p {
    margin-bottom: 0.25rem;
    font-size: 0.9em;
  }
  
  :global(.dark) .crisis-box {
    background: linear-gradient(135deg, rgba(255, 107, 107, 0.15) 0%, rgba(255, 0, 0, 0.15) 100%);
    border-left-color: #ff6b6b;
  }
  
  :global(.dark) .crisis-box h4 {
    color: #ff6b6b;
  }
</style>

